gunler = {
    1: "Bazar ertəsi",
    2: "Çərşənbə axşamı",
    3: "Çərşənbə",
    4: "Cümə axşamı",
    5: "Cümə",
    6: "Şənbə",
    7: "Bazar"
}

while True:
    try:
        eded = int(input("1-dən 7-yə qədər bir tam ədəd daxil et: "))
        if 1 <= eded <= 7:
            print(gunler[eded])
            break  # Düzgün ədəd daxil edildikdə dövrdən çıxırıq
        else:
            print("Belə bir gün yoxdur, yenidən cəhd et.")
    except:
        print("Zəhmət olmasa, tam ədəd daxil et.")